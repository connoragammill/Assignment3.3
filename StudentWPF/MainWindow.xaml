<Window x:Class="StudentWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentWPF"
        mc:Ignorable="d"
        Title="Student Data" Background="Goldenrod" Height="450" Width="800">
    <Grid Margin="80,45,80,45">
        <StackPanel>
            <Button x:Name="AddStudentButton" Content="Add New Student" Click="AddStudentButton_Click" />
            <Button x:Name="RemoveStudentButton" Content="Remove Selected Student" Click="RemoveStudentButton_Click" Margin="5"/>
            <DataGrid x:Name="StudentData" AutoGenerateColumns="True" SelectionMode="Single" Height="295" Width="640"/>
        </StackPanel>
    </Grid>
</Window>
